<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inventoryLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/character_background"
    >

    <TextView
        android:id="@+id/idnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:textSize="25sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        app:layout_constraintLeft_toRightOf="@+id/idnum"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="0dp"
        app:layout_constraintRight_toLeftOf="@+id/weightLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weightLabel"
        android:text="@string/weight_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        app:layout_constraintRight_toLeftOf="@+id/cCost"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/cCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="0dp"
        app:layout_constraintRight_toLeftOf="@+id/costLabel"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/costLabel"
        android:text="@string/currency_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confirmDeleteButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/delete_button_background"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>